{
  "name": "humanoid-robotics-textbook-frontend",
  "version": "1.0.0",
  "description": "Frontend for Physical AI & Humanoid Robotics Interactive Textbook",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "start": "cd apps/web && npm run start",
    "test": "npm test --workspaces --if-present",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:integration": "npm run test:integration --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "format": "prettier --write .",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "validate": "npm run lint && npm run type-check && npm test",
    "docs:dev": "cd apps/docs && npm run dev",
    "docs:serve": "cd apps/docs && npm run serve",
    "docs:build": "cd apps/docs && npm run build",
    "web:dev": "cd apps/web && npm run dev",
    "web:build": "cd apps/web && npm run build"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
