# Admin Dashboard Environment Variables
# Copy this to .env and fill in your values

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://username:password@hostname:5432/dbname"
POSTGRES_PRISMA_URL="postgresql://username:password@hostname:5432/dbname?pgbouncer=true"
POSTGRES_URL_NON_POOLING="postgresql://username:password@hostname:5432/dbname"

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET_KEY="your-super-secret-jwt-key-minimum-32-characters-here"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Session
SESSION_SECRET="your-session-secret-key-here"

# Admin IP Whitelist (optional, comma-separated)
# Leave empty to disable IP whitelist
ADMIN_IP_WHITELIST=""

# ============================================================================
# REDIS (for sessions and caching)
# ============================================================================
# Upstash Redis recommended for Vercel
REDIS_URL="redis://default:password@hostname:6379"
REDIS_TLS_URL="rediss://default:password@hostname:6379"

# ============================================================================
# VECTOR DATABASE (Qdrant for RAG)
# ============================================================================
QDRANT_URL="https://your-qdrant-instance.qdrant.tech"
QDRANT_API_KEY="your-qdrant-api-key"
QDRANT_COLLECTION_NAME="ai_robotics_docs"

# ============================================================================
# AI / LLM
# ============================================================================
# Google Gemini
GEMINI_API_KEY="your-gemini-api-key"

# OpenAI (alternative)
OPENAI_API_KEY="your-openai-api-key"

# ============================================================================
# EMAIL (for notifications)
# ============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
EMAIL_FROM="noreply@yourdomain.com"

# ============================================================================
# ADMIN CONFIGURATION
# ============================================================================
# Initial super admin account
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="ChangeMe123!"  # MUST CHANGE IN PRODUCTION
ADMIN_NAME="System Administrator"

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV="development"  # production | development
API_BASE_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:3000"
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Sentry (error tracking)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Axiom (logging)
AXIOM_TOKEN="your-axiom-token"
AXIOM_DATASET="production-logs"

# ============================================================================
# VERCEL (auto-populated in production)
# ============================================================================
# These are automatically set by Vercel - don't add manually
# VERCEL_URL
# VERCEL_ENV
# VERCEL_REGION

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_ADMIN_DASHBOARD=true
ENABLE_CHATBOT=true
ENABLE_RAG=true
ENABLE_USER_REGISTRATION=true

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_SECONDS=3600  # 1 hour
RATE_LIMIT_MAX_REQUESTS_USER=100
RATE_LIMIT_MAX_REQUESTS_ADMIN=1000

# ============================================================================
# SECURITY
# ============================================================================
# Password requirements
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Session
SESSION_TIMEOUT_MINUTES=30
SESSION_ABSOLUTE_TIMEOUT_HOURS=8

# ============================================================================
# DATABASE MAINTENANCE
# ============================================================================
LOG_RETENTION_DAYS=90
ANALYTICS_SNAPSHOT_INTERVAL="daily"  # hourly | daily

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================
DEBUG=false
LOG_LEVEL="info"  # debug | info | warning | error | critical
ENABLE_API_DOCS=true  # Swagger/OpenAPI docs
